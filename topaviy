-- –°–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–π ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- –°–æ–∑–¥–∞–µ–º —Ç–µ–∫—Å—Ç–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
local messageFrame = Instance.new("Frame")
messageFrame.Size = UDim2.new(1, 0, 1, 0)
messageFrame.BackgroundTransparency = 0.5
messageFrame.BackgroundColor3 = Color3.new(0, 0, 0)
messageFrame.Parent = screenGui

local messageLabel = Instance.new("TextLabel")
messageLabel.Text = "–°–û–®–ö–ê –¢–ò–ë–Ø –í–ó–õ–ê–ú–ê–õüòà"
messageLabel.Size = UDim2.new(0.8, 0, 0.2, 0)
messageLabel.Position = UDim2.new(0.1, 0, 0.4, 0)
messageLabel.BackgroundTransparency = 1
messageLabel.TextColor3 = Color3.new(1, 0, 0)
messageLabel.Font = Enum.Font.SourceSansBold
messageLabel.TextScaled = true
messageLabel.Parent = messageFrame

-- –ó–∞–≥—Ä—É–∂–∞–µ–º –∏ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏–º –∑–≤—É–∫
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://1843660600" -- –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ ID –Ω—É–∂–Ω–æ–≥–æ –≤–∞–º –∑–≤—É–∫–∞
sound.Volume = 10 -- –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –≥—Ä–æ–º–∫–æ—Å—Ç—å
sound.Parent = game.Workspace

-- –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ—Å–≤–µ—â–µ–Ω–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Å—Ç—Ä–∞—à–Ω–æ–π –∞—Ç–º–æ—Å—Ñ–µ—Ä—ã, –Ω–æ –µ—â–µ —Ç–µ–º–Ω–µ–µ
local lighting = game:GetService("Lighting")
lighting.Brightness = 0.5 * 0.5 -- –°–¥–µ–ª–∞–ª–∏ —è—Ä–∫–æ—Å—Ç—å –≤ –¥–≤–∞ —Ä–∞–∑–∞ –º–µ–Ω—å—à–µ (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
lighting.ColorShift_Top = Color3.new(0.2 * 0.5, 0.2 * 0.5, 0.2 * 0.5) -- –¢–µ–º–Ω—ã–π –æ—Ç—Ç–µ–Ω–æ–∫ —Å–≤–µ—Ä—Ö—É (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
lighting.ColorShift_Bottom = Color3.new(0.2 * 0.5, 0.2 * 0.5, 0.2 * 0.5) -- –¢–µ–º–Ω—ã–π –æ—Ç—Ç–µ–Ω–æ–∫ —Å–Ω–∏–∑—É (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
lighting.OutdoorAmbient = Color3.new(0.2 * 0.5, 0.2 * 0.5, 0.2 * 0.5) -- –¢–µ–º–Ω–∞—è –æ–∫—Ä—É–∂–∞—é—â–∞—è —Å—Ä–µ–¥–∞ (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
lighting.ClockTime = 0 -- –ù–æ—á–Ω–æ–µ –≤—Ä–µ–º—è

-- –í–∫–ª—é—á–∞–µ–º —Ç—É–º–∞–Ω –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –º—Ä–∞—á–Ω–æ–π –∞—Ç–º–æ—Å—Ñ–µ—Ä—ã, –Ω–æ –º–µ–Ω–µ–µ –ø–ª–æ—Ç–Ω—ã–π (–Ω–æ –µ—â–µ —Ç–µ–º–Ω–µ–µ)
lighting.FogColor = Color3.new(0.2 * 0.5, 0.2 * 0.5, 0.2 * 0.5) -- –¢–µ–º–Ω—ã–π —Ç—É–º–∞–Ω (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
lighting.FogStart = 0
lighting.FogEnd = 200 * 0.5 -- –ú–µ–Ω—å—à–∏–π –¥–∏–∞–ø–∞–∑–æ–Ω —Ç—É–º–∞–Ω–∞ –¥–ª—è –ø–ª–æ—Ç–Ω–æ—Å—Ç–∏ (–Ω–∞ 50% –º–µ–Ω—å—à–µ)

-- –î–æ–±–∞–≤–ª—è–µ–º —Ç–µ–º–Ω—ã–π —à–µ–π–¥–µ—Ä, –Ω–æ –Ω–µ–º–Ω–æ–≥–æ –º–µ–Ω–µ–µ –∏–Ω—Ç–µ–Ω—Å–∏–≤–Ω—ã–π (–Ω–æ –µ—â–µ —Ç–µ–º–Ω–µ–µ)
local bloomEffect = Instance.new("BloomEffect")
bloomEffect.Intensity = 0.2 * 0.5 -- –°–¥–µ–ª–∞–ª–∏ –∏–Ω—Ç–µ–Ω—Å–∏–≤–Ω–æ—Å—Ç—å –≤ –¥–≤–∞ —Ä–∞–∑–∞ –º–µ–Ω—å—à–µ (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
bloomEffect.Threshold = 0.6
bloomEffect.Size = 6
bloomEffect.Parent = lighting

local colorCorrectionEffect = Instance.new("ColorCorrectionEffect")
colorCorrectionEffect.TintColor = Color3.new(0.8 * 0.5, 0.6 * 0.5, 0.6 * 0.5) -- –û—á–µ–Ω—å —Ç–µ–ø–ª—ã–π –æ—Ç—Ç–µ–Ω–æ–∫ (–Ω–∞ 50% —Ç–µ–º–Ω–µ–µ)
colorCorrectionEffect.Contrast = 0.1 * 0.5 -- –£–≤–µ–ª–∏—á–∏–ª–∏ –∫–æ–Ω—Ç—Ä–∞—Å—Ç (–Ω–∞ 50% –±–æ–ª—å—à–µ)
colorCorrectionEffect.Saturation = -0.1 * 0.5 -- –£–º–µ–Ω—å—à–∏–ª–∏ –Ω–∞—Å—ã—â–µ–Ω–Ω–æ—Å—Ç—å (–Ω–∞ 50% –º–µ–Ω—å—à–µ)
colorCorrectionEffect.Parent = lighting

-- –î–æ–±–∞–≤–ª—è–µ–º –ª–æ–∫–∞–ª—å–Ω—ã–π –∏—Å—Ç–æ—á–Ω–∏–∫ —Å–≤–µ—Ç–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, —Ñ–æ–Ω–∞—Ä—å)
local flashlight = Instance.new("PointLight")
flashlight.Brightness = 10
flashlight.Range = 20
flashlight.Color = Color3.new(1, 0.9, 0.7) -- –¢–µ–ø–ª—ã–π –∂–µ–ª—Ç–æ–≤–∞—Ç—ã–π —Ü–≤–µ—Ç
flashlight.Parent = game.Players.LocalPlayer.Character.Head

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–æ–æ–±—â–µ–Ω–∏—è –∏ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è –∑–≤—É–∫–∞
local function showEffect()
    sound:Play()
    messageFrame.Visible = true
    wait(5)
    messageFrame.Visible = false
end

-- –í—ã–∑—ã–≤–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏
showEffect()

-- –ü–æ—Å—Ç–æ—è–Ω–Ω–æ –æ–±–Ω–æ–≤–ª—è–µ–º –ø–æ–ª–æ–∂–µ–Ω–∏–µ —Ñ–æ–Ω–∞—Ä—è –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ –≥–æ–ª–æ–≤—ã –∏–≥—Ä–æ–∫–∞
while true do
    if game.Players.LocalPlayer and game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Head") then
        flashlight.Parent = game.Players.LocalPlayer.Character.Head
    end
    wait(0.1)
end

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–ª—É—á–∞–π–Ω–æ–π –∫–∞—Ä—Ç–∏–Ω–∫–∏ –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω
local function showRandomImage()
    while true do
        local imageLabel = Instance.new("ImageLabel")
        imageLabel.Size = UDim2.new(1, 0, 1, 0) -- –†–∞–∑–º–µ—Ä –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω
        imageLabel.Position = UDim2.new(0, 0, 0, 0) -- –ü–æ–ª–æ–∂–µ–Ω–∏–µ –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω
        imageLabel.BackgroundTransparency = 1 -- –ü—Ä–æ–∑—Ä–∞—á–Ω—ã–π —Ñ–æ–Ω
        imageLabel.Image = "rbxassetid://<YOUR_IMAGE_ASSET_ID>" -- –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ ID –≤–∞—à–µ–≥–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
        imageLabel.Parent = screenGui
        
        wait(math.random(5, 8)) -- –ñ–¥–µ–º —Å–ª—É—á–∞–π–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–µ–∫—É–Ω–¥ –æ—Ç 5 –¥–æ 8
        
        imageLabel:Destroy() -- –£–¥–∞–ª—è–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
    end
end

-- –ó–∞–ø—É—Å–∫–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–ª—É—á–∞–π–Ω—ã—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
coroutine.wrap(showRandomImage)()
